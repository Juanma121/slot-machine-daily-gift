# EditorConfig ayuda a mantener estilos de codificación consistentes
# Más info: https://editorconfig.org/

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Archivos Markdown: no eliminar espacios al final
[*.md]
trim_trailing_whitespace = false

# Archivos CSS y SCSS
[*.{css,scss}]
indent_size = 2

# Archivos JSON, YAML
[*.{json,yml,yaml}]
indent_size = 2

# Archivos HTML
[*.html]
indent_size = 2

# Archivos JavaScript y JSX
[*.{js,mjs,jsx}]
indent_size = 2

# Archivos TypeScript (por si en el futuro incorporas algo)
[*.{ts,tsx}]
indent_size = 2
